# ==============================================================================
# CITIZEN AFFILIATION MICROSERVICE - ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ==============================================================================
# CORE SETTINGS
# ==============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,web,0.0.0.0
APP_ENV=development

# ==============================================================================
# DATABASE CONFIGURATION (MariaDB/MySQL)
# ==============================================================================
# MariaDB Container Settings
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=citizen_affiliation
MYSQL_USER=djangouser
MYSQL_PASSWORD=djangopass

# Django Database Connection
# Use DATABASE_URL format: mysql://user:password@host:port/database
# For local development with docker-compose:
DATABASE_URL=mysql://djangouser:djangopass@localhost:3306/citizen_affiliation

# ==============================================================================
# REDIS CACHE CONFIGURATION
# ==============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================================================
# JWT CONFIGURATION
# ==============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_MINUTES=15
JWT_REFRESH_TOKEN_DAYS=7

# ==============================================================================
# RABBITMQ CONFIGURATION
# ==============================================================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=citizen_affiliation

# RabbitMQ Queue Names and Routing Keys
RABBITMQ_AFFILIATION_CHECKED_QUEUE=affiliation.checked
RABBITMQ_DOCUMENT_AUTH_QUEUE=document.authentication.requested
RABBITMQ_DOCUMENT_AUTH_ROUTING_KEY=document.authentication.requested

# ==============================================================================
# EXTERNAL API CONFIGURATION
# ==============================================================================
EXTERNAL_AFFILIATION_API_URL=https://govcarpeta-apis-4905ff3c005b.herokuapp.com
EXTERNAL_AFFILIATION_API_KEY=
EXTERNAL_API_TIMEOUT=30

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ==============================================================================
# API THROTTLING
# ==============================================================================
THROTTLE_ANON=100/hour
THROTTLE_USER=1000/hour

# ==============================================================================
# SECURITY SETTINGS (Production)
# ==============================================================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ==============================================================================
# SERVICE ACCOUNTS
# ==============================================================================
# Django Superuser
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin123
DJANGO_SUPERUSER_EMAIL=admin@connectivity.local

# Document Service Account
DOCUMENT_SERVICE_USERNAME=document-service
DOCUMENT_SERVICE_PASSWORD=doc-service-pass-123
DOCUMENT_SERVICE_EMAIL=document-service@connectivity.local

# Auth Service Account
AUTH_SERVICE_USERNAME=auth-service
AUTH_SERVICE_PASSWORD=auth-service-pass-123
AUTH_SERVICE_EMAIL=auth-service@connectivity.local

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=INFO
TIME_ZONE=UTC
